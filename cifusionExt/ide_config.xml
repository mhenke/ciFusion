    <menucontributions >

		<contribution target="projectview">
			<menu name="ciFusion">
	    		<action name="Check for Compile Errors" handlerid="cfcompile" showResponse="true">
	    			<dialog height="600" width="650" />
				</action>
				<action name="Check for Duplicate Code" handlerid="dupcode" showResponse="true">
	    			<dialog height="600" width="650" />
				</action>
			</menu>
		</contribution>

    </menucontributions>	

	<handlers>
		<handler id="cfcompile" type="CFM" filename="1.cfm" />		
		<handler id="dupcode" type="CFM" filename="2.cfm" />
		<handler id="htmlClean" type="CFM" filename="3.cfm" />
	</handlers>

